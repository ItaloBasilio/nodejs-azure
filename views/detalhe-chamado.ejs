<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Detalhe do Chamado</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            background-color: #212529;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: block;
            padding: 10px;
        }

        .sidebar a:hover {
            background-color: #343a40;
            color: #fff;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><i class="bi bi-headset"></i> Service Desk</a>
            <div class="d-flex">
                <span id="userName" class="navbar-text text-white me-3">Bem-vindo</span>
                <button id="logoutBtn" class="btn btn-outline-light btn-sm">Sair</button>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <!-- MENU -->
            <div class="col-md-2 sidebar p-3">
                <h6 class="text-white">Menu</h6>
                <a href="/"><i class="bi bi-speedometer2"></i> Dashboard</a>
                <a href="/chamados"><i class="bi bi-ticket"></i> Chamados</a>
                <a href="/novo-chamado"><i class="bi bi-plus-circle"></i> Novo Chamado</a>
            </div>

            <!-- CONTE√öDO -->
            <div class="col-md-10 p-4">

                <h3 class="mb-4">Detalhe do Chamado #<%= chamado.id %></h3>

                <!-- CARD INFORMA√á√ïES -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <%= chamado.titulo %>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <p style="margin-top:8px; font-size: 14px; color: #666;">
                                <strong>Data de abertura:</strong>
                                <%= new Date(chamado.dataCriacao).toLocaleString('pt-BR') %>
                            </p>
                            <div class="col-md-3">
                                <strong>Status:</strong>
                                <span class="badge bg-success"><%= chamado.status %></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Categoria:</strong>
                                <%= chamado.categoria %>
                            </div>
                            <div class="col-md-3">
                                <strong>Prioridade:</strong>
                                <span class="badge bg-warning"><%= chamado.prioridade %></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Solicitante:</strong>
                                <%= chamado.solicitante %>
                            </div>
                        </div>

                        <hr>

                        <strong>Descri√ß√£o:</strong>
                        <p class="mt-2"><%= chamado.descricao %></p>

                        <hr>

                        <!-- ANEXOS -->
                        <h6>Anexos:</h6>

                        <hr>

                        <h6>Adicionar Anexo:</h6>

                        <form id="formAnexo" enctype="multipart/form-data">
                            <div class="input-group">
                                <input type="file" name="anexos" id="inputAnexo" class="form-control" multiple required>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-upload"></i> Enviar
                                </button>
                            </div>
                        </form>

                        <div class="mt-3" id="listaAnexos">
                            <% if (chamado.anexos && chamado.anexos.length> 0) { %>
                                <% chamado.anexos.forEach(function(anexo){ %>

                                    <div class="d-flex justify-content-between align-items-center border p-2 mb-2 rounded">

                                        <div>
                                            <i class="bi bi-paperclip"></i>
                                            <a href="<%= anexo.caminho %>" target="_blank">
                                                <%= anexo.nomeOriginal %>
                                            </a>
                                        </div>

                                        <div>
                                            <a href="<%= anexo.caminho %>" class="btn btn-sm btn-success me-2" download>
                                                <i class="bi bi-download"></i>
                                            </a>

                                            <!-- üîí Bot√£o remover: s√≥ admin -->
                                            <button
                                                class="btn btn-sm btn-danger btn-remover-anexo"
                                                data-nome="<%= anexo.nomeSalvo %>"
                                                type="button"
                                                onclick="removerAnexo('<%= anexo.nomeSalvo %>')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                    </div>

                                <% }) %>
                            <% } else { %>
                                <p class="text-muted">Nenhum anexo enviado.</p>
                            <% } %>
                        </div>

                    </div>
                </div>

                <!-- CARD HIST√ìRICO -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        Hist√≥rico de Intera√ß√µes
                    </div>
                    <div class="card-body">

                        <% if (chamado.interacoes && chamado.interacoes.length> 0) { %>
                            <% chamado.interacoes.forEach(function(interacao){ %>
                                <div class="border-bottom pb-3 mb-3">
                                    <div class="d-flex justify-content-between">
                                        <strong><%= interacao.autor %></strong>
                                        <small class="text-muted">
                                            <%= new Date(interacao.data).toLocaleString() %>
                                        </small>
                                    </div>
                                    <p class="mt-2 mb-0"><%= interacao.mensagem %></p>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-muted">Nenhuma intera√ß√£o registrada.</p>
                        <% } %>

                    </div>
                </div>

                <!-- CARD NOVA INTERA√á√ÉO -->
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        Nova Intera√ß√£o
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <textarea id="mensagem" class="form-control" rows="4"
                                placeholder="Digite sua intera√ß√£o..."></textarea>
                        </div>
                        <button class="btn btn-primary" onclick="enviarInteracao()">
                            <i class="bi bi-send"></i> Salvar Intera√ß√£o
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ‚úÖ AUTH HELPER (JWT) -->
    <script src="/js/auth.js"></script>

    <script>
        const chamadoId = "<%= chamado.id %>";

        async function verificarLogin() {
            const token = getToken();
            if (!token) {
                window.location.href = "/login";
                return;
            }

            const response = await authFetch("/api/auth/check");
            if (!response.ok) {
                localStorage.removeItem("token");
                window.location.href = "/login";
            }
        }

        async function enviarInteracao() {
            const mensagem = document.getElementById("mensagem").value;

            if (!mensagem) {
                alert("Digite uma mensagem.");
                return;
            }

            await authFetch(`/api/chamados/${chamadoId}/interacao`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ mensagem })
            });

            location.reload();
        }

        async function removerAnexo(nomeArquivo) {
            if (!confirm("Deseja realmente remover este anexo?")) return;

            const res = await authFetch(`/api/chamados/${chamadoId}/anexo/${nomeArquivo}`, {
                method: "DELETE"
            });

            if (!res.ok) {
                const data = await res.json().catch(() => null);
                alert(data?.error || "Voc√™ n√£o tem permiss√£o para remover anexos.");
                return;
            }

            location.reload();
        }

        document.getElementById("logoutBtn").addEventListener("click", () => {
            logout();
        });

        document.getElementById("formAnexo").addEventListener("submit", async function (e) {
            e.preventDefault();

            const input = document.getElementById("inputAnexo");

            if (input.files.length === 0) {
                alert("Selecione pelo menos um arquivo");
                return;
            }

            const formData = new FormData();
            for (let file of input.files) {
                formData.append("anexos", file);
            }

            const res = await authFetch(`/api/chamados/${chamadoId}/anexo`, {
                method: "POST",
                body: formData
            });

            if (!res.ok) {
                const data = await res.json().catch(() => null);
                alert(data?.error || "Erro ao enviar anexo.");
                return;
            }

            location.reload();
        });

        async function aplicarPermissoesFront() {
            const res = await authFetch("/api/auth/check");
            if (!res.ok) return;

            const data = await res.json();
            const role = data?.usuario?.role;

            // üîí Remover anexo: s√≥ admin
            if (role !== "admin") {
                document.querySelectorAll(".btn-remover-anexo").forEach(btn => {
                    btn.style.display = "none";
                });
            }
        }

        async function iniciar() {
            await verificarLogin();
            await carregarUsuarioLogado();
            await aplicarPermissoesFront();
        }

        iniciar();
    </script>

</body>

</html>