<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Detalhe do Chamado</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body { background-color: #f8f9fa; }
        .sidebar { height: 100vh; background-color: #212529; }
        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: block;
            padding: 10px;
        }
        .sidebar a:hover {
            background-color: #343a40;
            color: #fff;
        }
    </style>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="bi bi-headset"></i> Service Desk</a>
        <div class="d-flex">
            <span class="navbar-text text-white me-3">Bem-vindo, Admin</span>
            <button id="logoutBtn" class="btn btn-outline-light btn-sm">Sair</button>
        </div>
    </div>
</nav>

<div class="container-fluid">
<div class="row">

<!-- MENU -->
<div class="col-md-2 sidebar p-3">
    <h6 class="text-white">Menu</h6>
    <a href="/"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <a href="/chamados"><i class="bi bi-ticket"></i> Chamados</a>
    <a href="/novo-chamado"><i class="bi bi-plus-circle"></i> Novo Chamado</a>
</div>

<!-- CONTEÚDO -->
<div class="col-md-10 p-4">

<h3 class="mb-4">Detalhe do Chamado #<%= chamado.id %></h3>

<!-- CARD INFORMAÇÕES -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <%= chamado.titulo %>
    </div>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-3">
                <strong>Status:</strong>
                <span class="badge bg-success"><%= chamado.status %></span>
            </div>
            <div class="col-md-3">
                <strong>Categoria:</strong>
                <%= chamado.categoria %>
            </div>
            <div class="col-md-3">
                <strong>Prioridade:</strong>
                <span class="badge bg-warning"><%= chamado.prioridade %></span>
            </div>
            <div class="col-md-3">
                <strong>Solicitante:</strong>
                <%= chamado.solicitante %>
            </div>
        </div>

        <hr>

        <strong>Descrição:</strong>
        <p class="mt-2"><%= chamado.descricao %></p>

        <hr>

        <!-- ANEXOS -->
        <h6>Anexos:</h6>

        <% if (chamado.anexos && chamado.anexos.length > 0) { %>
            <% chamado.anexos.forEach(function(anexo){ %>

                <div class="d-flex justify-content-between align-items-center border p-2 mb-2 rounded">

                    <div>
                        <i class="bi bi-paperclip"></i>
                        <a href="<%= anexo.caminho %>" target="_blank">
                            <%= anexo.nomeOriginal %>
                        </a>
                    </div>

                    <div>
                        <a href="<%= anexo.caminho %>" 
                           class="btn btn-sm btn-success me-2" 
                           download>
                           <i class="bi bi-download"></i>
                        </a>

                        <button class="btn btn-sm btn-danger"
                            onclick="removerAnexo('<%= anexo.nomeSalvo %>')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>

                </div>

            <% }) %>
        <% } else { %>
            <p class="text-muted">Nenhum anexo enviado.</p>
        <% } %>

    </div>
</div>

<!-- CARD HISTÓRICO -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white">
        Histórico de Interações
    </div>
    <div class="card-body">

        <% if (chamado.interacoes && chamado.interacoes.length > 0) { %>
            <% chamado.interacoes.forEach(function(interacao){ %>
                <div class="border-bottom pb-3 mb-3">
                    <div class="d-flex justify-content-between">
                        <strong><%= interacao.autor %></strong>
                        <small class="text-muted">
                            <%= new Date(interacao.data).toLocaleString() %>
                        </small>
                    </div>
                    <p class="mt-2 mb-0"><%= interacao.mensagem %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-muted">Nenhuma interação registrada.</p>
        <% } %>

    </div>
</div>

<!-- CARD NOVA INTERAÇÃO -->
<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        Nova Interação
    </div>
    <div class="card-body">
        <div class="mb-3">
            <textarea id="mensagem" class="form-control" rows="4"
                placeholder="Digite sua interação..."></textarea>
        </div>
        <button class="btn btn-primary" onclick="enviarInteracao()">
            <i class="bi bi-send"></i> Salvar Interação
        </button>
    </div>
</div>

</div>
</div>
</div>

<script>
const chamadoId = "<%= chamado.id %>";

async function enviarInteracao() {
    const mensagem = document.getElementById("mensagem").value;

    if (!mensagem) {
        alert("Digite uma mensagem.");
        return;
    }

    await fetch(`/api/chamados/${chamadoId}/interacao`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
            mensagem: mensagem,
            autor: "Analista"
        })
    });

    location.reload();
}

async function removerAnexo(nomeArquivo) {

    if (!confirm("Deseja realmente remover este anexo?")) return;

    await fetch(`/api/chamados/${chamadoId}/anexo/${nomeArquivo}`, {
        method: "DELETE"
    });

    location.reload();
}

document.getElementById("logoutBtn").addEventListener("click", async () => {
    await fetch("/api/auth/logout", { method: "POST", credentials: "include" });
    window.location.href = "/login";
});
</script>

</body>
</html>