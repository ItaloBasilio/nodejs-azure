<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Service Desk - Clientes</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body { background-color: #f8f9fa; }

        .sidebar { height: 100vh; background-color: #212529; }
        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: block;
            padding: 10px;
        }
        .sidebar a:hover { background-color: #343a40; color: #fff; }
        .sidebar .active { background-color: #343a40; color: #fff; }

        .titulo-link { text-decoration: none; font-weight: 500; }
        .titulo-link:hover { text-decoration: underline; }
    </style>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="bi bi-headset"></i> Service Desk</a>
        <div class="d-flex">
            <span id="userName" class="navbar-text text-white me-3">Bem-vindo</span>
            <button id="logoutBtn" class="btn btn-outline-light btn-sm">Sair</button>
        </div>
    </div>
</nav>

<div class="container-fluid">
<div class="row">

    <!-- MENU -->
    <%- include("partials/sidebar") %>

    <!-- CONTEÚDO -->
    <div class="col-md-10 p-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="m-0">Gestão de Clientes</h3>
            <small class="text-muted">Acesso restrito: Admin</small>
        </div>

        <!-- ALERTAS -->
        <div id="alertSuccess" class="alert alert-success d-none"></div>
        <div id="alertError" class="alert alert-danger d-none"></div>

        <!-- CARD CADASTRO -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                Cadastrar Cliente
            </div>
            <div class="card-body">
                <form id="formCliente" class="row g-3" novalidate>
                    <div class="col-md-5">
                        <label class="form-label">Nome do Cliente</label>
                        <input type="text" class="form-control" id="nome" required>
                        <div class="invalid-feedback">Informe o nome do cliente.</div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">CNPJ</label>
                        <input type="text" class="form-control" id="cnpj" placeholder="00.000.000/0000-00" required>
                        <div class="invalid-feedback">Informe o CNPJ.</div>
                    </div>

                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-success w-100" type="submit">
                            <i class="bi bi-plus-circle"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- LISTA -->
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                Clientes cadastrados
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th>Nome</th>
                            <th>CNPJ</th>
                            <th>Status</th>
                            <th style="width: 260px;">Ações</th>
                        </tr>
                        </thead>
                        <tbody id="tbodyClientes">
                            <tr>
                                <td colspan="4" class="text-muted">Carregando...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
</div>

<!-- ✅ MODAL EDITAR CLIENTE -->
<div class="modal fade" id="modalEditarCliente" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formEditarCliente" class="modal-content" novalidate>
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-pencil"></i> Editar Cliente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <input type="hidden" id="editClienteId">

        <div class="mb-3">
          <label class="form-label">Nome</label>
          <input type="text" class="form-control" id="editClienteNome" required>
          <div class="invalid-feedback">Informe o nome do cliente.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">CNPJ</label>
          <input type="text" class="form-control" id="editClienteCnpj" placeholder="00.000.000/0000-00" required>
          <div class="invalid-feedback">Informe o CNPJ.</div>
        </div>

        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="editClienteAtivo">
          <label class="form-check-label" for="editClienteAtivo">Ativo</label>
        </div>

        <div id="editClienteErro" class="text-danger mt-2" style="display:none;"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save"></i> Salvar alterações
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/auth.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
const API = "/api/clientes";
let modalEditar = null;

/* ✅ marca o item atual no menu */
function marcarMenuAtivo() {
    const path = window.location.pathname;
    document.querySelectorAll(".sidebar a").forEach(a => {
        if (a.getAttribute("href") === path) a.classList.add("active");
    });
}

function showSuccess(msg) {
    const el = document.getElementById("alertSuccess");
    el.innerText = msg;
    el.classList.remove("d-none");
    setTimeout(() => el.classList.add("d-none"), 3000);
}

function showError(msg) {
    const el = document.getElementById("alertError");
    el.innerText = msg;
    el.classList.remove("d-none");
    setTimeout(() => el.classList.add("d-none"), 4000);
}

function setInvalid(inputEl, isInvalid) {
    if (!inputEl) return;
    inputEl.classList.toggle("is-invalid", !!isInvalid);
}

function limparInvalidAoDigitar(inputEl) {
    inputEl.addEventListener("input", () => setInvalid(inputEl, false));
}

function validarNaoVazio(nomeEl, cnpjEl, modo = "cadastro") {
    const nome = (nomeEl.value || "").trim();
    const cnpj = (cnpjEl.value || "").trim();

    let ok = true;

    if (!nome) { setInvalid(nomeEl, true); ok = false; }
    if (!cnpj) { setInvalid(cnpjEl, true); ok = false; }

    if (!ok) {
        if (modo === "cadastro") showError("Preencha Nome e CNPJ antes de salvar.");
        if (modo === "edicao") {
            const erro = document.getElementById("editClienteErro");
            erro.innerText = "Preencha Nome e CNPJ antes de salvar.";
            erro.style.display = "block";
        }
    }

    return ok;
}

async function exigirAdmin() {
    const ok = await verificarLogin();
    if (!ok) return false;

    const res = await authFetch("/api/auth/check");
    const data = await res.json().catch(() => null);

    if (data?.usuario?.role !== "admin") {
        window.location.href = "/";
        return false;
    }
    return true;
}

function abrirModalEditar(cliente) {
    document.getElementById("editClienteId").value = cliente.id;
    document.getElementById("editClienteNome").value = cliente.nome || "";
    document.getElementById("editClienteCnpj").value = cliente.cnpj || "";
    document.getElementById("editClienteAtivo").checked = cliente.ativo !== false;

    // limpa estados de erro
    setInvalid(document.getElementById("editClienteNome"), false);
    setInvalid(document.getElementById("editClienteCnpj"), false);

    const erro = document.getElementById("editClienteErro");
    erro.style.display = "none";
    erro.innerText = "";

    if (!modalEditar) {
        modalEditar = new bootstrap.Modal(document.getElementById("modalEditarCliente"));
    }
    modalEditar.show();
}

async function carregarClientes() {
    const tbody = document.getElementById("tbodyClientes");

    const res = await authFetch(API);
    if (!res.ok) {
        tbody.innerHTML = `<tr><td colspan="4" class="text-danger">Erro ao carregar clientes</td></tr>`;
        return;
    }

    const clientes = await res.json().catch(() => []);

    clientes.sort((a, b) => (a.nome || "").localeCompare((b.nome || ""), "pt-BR"));

    if (!clientes.length) {
        tbody.innerHTML = `<tr><td colspan="4" class="text-muted">Nenhum cliente cadastrado.</td></tr>`;
        return;
    }

    tbody.innerHTML = "";
    clientes.forEach(c => {
        const ativo = c.ativo !== false;

        const payload = JSON.stringify({
            id: c.id, nome: c.nome, cnpj: c.cnpj, ativo: ativo
        }).replace(/'/g, "&apos;");

        tbody.innerHTML += `
        <tr>
            <td>${c.nome}</td>
            <td>${c.cnpj}</td>
            <td>
                <span class="badge ${ativo ? "bg-success" : "bg-secondary"}">
                    ${ativo ? "Ativo" : "Inativo"}
                </span>
            </td>
            <td>
                <button class="btn btn-sm btn-outline-primary me-2"
                    onclick='abrirModalEditar(${payload})'>
                    <i class="bi bi-pencil"></i> Editar
                </button>

                <button class="btn btn-sm btn-outline-danger"
                    onclick="deletarCliente('${c.id}')">
                    <i class="bi bi-trash"></i> Deletar
                </button>
            </td>
        </tr>`;
    });
}

async function deletarCliente(id) {
    if (!confirm("Deseja realmente deletar este cliente?")) return;

    const res = await authFetch(`${API}/${id}`, { method: "DELETE" });
    const data = await res.json().catch(() => null);

    if (!res.ok) {
        showError(data?.error || "Erro ao deletar cliente");
        return;
    }

    showSuccess("Cliente removido com sucesso");
    carregarClientes();
}

/* ✅ CADASTRO */
const nomeEl = document.getElementById("nome");
const cnpjEl = document.getElementById("cnpj");
limparInvalidAoDigitar(nomeEl);
limparInvalidAoDigitar(cnpjEl);

document.getElementById("formCliente").addEventListener("submit", async e => {
    e.preventDefault();

    if (!validarNaoVazio(nomeEl, cnpjEl, "cadastro")) return;

    const nome = nomeEl.value.trim();
    const cnpj = cnpjEl.value.trim();

    const res = await authFetch(API, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, cnpj })
    });

    const data = await res.json().catch(() => null);
    if (!res.ok) {
        showError(data?.error || "Erro ao salvar cliente");
        return;
    }

    showSuccess("Cliente cadastrado com sucesso");
    document.getElementById("formCliente").reset();
    setInvalid(nomeEl, false);
    setInvalid(cnpjEl, false);
    carregarClientes();
});

/* ✅ EDIÇÃO (PUT) */
const editNomeEl = document.getElementById("editClienteNome");
const editCnpjEl = document.getElementById("editClienteCnpj");
limparInvalidAoDigitar(editNomeEl);
limparInvalidAoDigitar(editCnpjEl);

document.getElementById("formEditarCliente").addEventListener("submit", async (e) => {
    e.preventDefault();

    const id = document.getElementById("editClienteId").value;
    const ativo = document.getElementById("editClienteAtivo").checked;

    const erro = document.getElementById("editClienteErro");
    erro.style.display = "none";
    erro.innerText = "";

    if (!validarNaoVazio(editNomeEl, editCnpjEl, "edicao")) return;

    const nome = editNomeEl.value.trim();
    const cnpj = editCnpjEl.value.trim();

    const res = await authFetch(`${API}/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nome, cnpj, ativo })
    });

    const data = await res.json().catch(() => null);

    if (!res.ok) {
        const msg = data?.error || "Erro ao atualizar cliente";
        erro.innerText = msg;
        erro.style.display = "block";
        return;
    }

    modalEditar?.hide();
    showSuccess("Cliente atualizado com sucesso");
    carregarClientes();
});

document.getElementById("logoutBtn").onclick = logout;

async function iniciar() {
    marcarMenuAtivo();

    const ok = await exigirAdmin();
    if (!ok) return;

    await carregarUsuarioLogado();
    await carregarClientes();
}

iniciar();
</script>

</body>
</html>