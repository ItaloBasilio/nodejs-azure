<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Service Desk - Categorias</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { background-color: #f8f9fa; }

    .sidebar { height: 100vh; background-color: #212529; }
    .sidebar a {
      color: #adb5bd;
      text-decoration: none;
      display: block;
      padding: 10px;
    }
    .sidebar a:hover { background-color: #343a40; color: #fff; }
    .sidebar .active { background-color: #343a40; color: #fff; }

    .filter-hint { font-size: .9rem; }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="bi bi-headset"></i> Service Desk</a>
      <div class="d-flex">
        <span id="userName" class="navbar-text text-white me-3">Bem-vindo</span>
        <button id="logoutBtn" class="btn btn-outline-light btn-sm">Sair</button>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">

      <!-- MENU -->
      <%- include("partials/sidebar") %>

      <!-- CONTEÚDO -->
      <div class="col-md-10 p-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
          <h3 class="m-0">Gestão de Categorias</h3>
          <small class="text-muted">Acesso restrito: Admin</small>
        </div>

        <!-- ALERTAS -->
        <div id="alertSuccess" class="alert alert-success d-none"></div>
        <div id="alertError" class="alert alert-danger d-none"></div>

        <!-- CARD CADASTRO -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-primary text-white">
            Cadastrar Categoria
          </div>
          <div class="card-body">
            <form id="formCategoria" class="row g-3" novalidate>
              <div class="col-md-5">
                <label class="form-label">Grupo</label>
                <select class="form-select" id="grupo" required>
                  <option value="" selected disabled>Carregando grupos...</option>
                </select>
                <div class="invalid-feedback">Informe o grupo.</div>
                <small class="text-muted d-block mt-1">
                  Não achou o grupo? <a href="/gestao-grupos">Cadastrar em Gestão de Grupos</a>.
                </small>
              </div>

              <div class="col-md-5">
                <label class="form-label">Nome da categoria</label>
                <input type="text" class="form-control" id="nome" placeholder="Ex: Excluir usuário" required>
                <div class="invalid-feedback">Informe o nome da categoria.</div>
              </div>

              <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-success w-100" type="submit">
                  <i class="bi bi-plus-circle"></i> Salvar
                </button>
              </div>
            </form>

            <small class="text-muted d-block mt-2">
              Exemplo: <strong>Acesso e Permissões</strong> &gt; <strong>Excluir usuário</strong>
            </small>
          </div>
        </div>

        <!-- LISTA -->
        <div class="card shadow-sm">
          <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <span>Categorias cadastradas</span>
            <button class="btn btn-outline-light btn-sm" id="btnRecarregar">
              <i class="bi bi-arrow-clockwise"></i> Recarregar
            </button>
          </div>

          <div class="card-body">

            <!-- ✅ FILTRO -->
            <div class="row g-2 align-items-end mb-3">
              <div class="col-md-6">
                <label class="form-label mb-1">Pesquisar</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-search"></i></span>
                  <input
                    type="text"
                    class="form-control"
                    id="filtroCategorias"
                    placeholder="Digite grupo, categoria, status ou ID..."
                    autocomplete="off"
                  >
                  <button class="btn btn-outline-secondary" type="button" id="btnLimparFiltroCategorias">
                    Limpar
                  </button>
                </div>
                <div class="text-muted filter-hint mt-1">
                  Busca em: <strong>ID</strong>, <strong>Grupo</strong>, <strong>Categoria</strong>, <strong>Status</strong>
                </div>
              </div>

              <div class="col-md-6 text-md-end">
                <div class="text-muted">
                  <span id="contadorCategorias">0</span> resultado(s)
                </div>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>Grupo</th>
                    <th>Categoria</th>
                    <th>Status</th>
                    <th style="width: 320px;">Ações</th>
                  </tr>
                </thead>
                <tbody id="tbodyCategorias">
                  <tr>
                    <td colspan="4" class="text-muted">Carregando...</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <small class="text-muted">
              Dica: você pode <strong>inativar</strong> uma categoria para ela não aparecer no “Novo Chamado”.
            </small>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- ✅ MODAL EDITAR CATEGORIA -->
  <div class="modal fade" id="modalEditarCategoria" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <form id="formEditarCategoria" class="modal-content" novalidate>
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil"></i> Editar Categoria</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" id="editId">

          <div class="mb-3">
            <label class="form-label">Grupo</label>
            <select class="form-select" id="editGrupo" required>
              <option value="" selected disabled>Carregando grupos...</option>
            </select>
            <div class="invalid-feedback">Informe o grupo.</div>
          </div>

          <div class="mb-3">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" id="editNome" required>
            <div class="invalid-feedback">Informe o nome da categoria.</div>
          </div>

          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="editAtiva">
            <label class="form-check-label" for="editAtiva">Ativa</label>
          </div>

          <div id="editErro" class="text-danger mt-2" style="display:none;"></div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Salvar alterações
          </button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/auth.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const API = "/api/categorias";
    const API_GRUPOS = "/api/grupos?ativos=1";
    let modalEditar = null;

    function marcarMenuAtivo() {
      const path = window.location.pathname;
      document.querySelectorAll(".sidebar a").forEach(a => {
        if (a.getAttribute("href") === path) a.classList.add("active");
      });
    }

    function showSuccess(msg) {
      const el = document.getElementById("alertSuccess");
      el.innerText = msg;
      el.classList.remove("d-none");
      setTimeout(() => el.classList.add("d-none"), 3000);
    }

    function showError(msg) {
      const el = document.getElementById("alertError");
      el.innerText = msg;
      el.classList.remove("d-none");
      setTimeout(() => el.classList.add("d-none"), 4000);
    }

    function setInvalid(el, isInvalid) {
      if (!el) return;
      el.classList.toggle("is-invalid", !!isInvalid);
    }

    function limparInvalidAoDigitar(el) {
      el.addEventListener("input", () => setInvalid(el, false));
      el.addEventListener("change", () => setInvalid(el, false));
    }

    function validarNaoVazio(grupoEl, nomeEl, modo = "cadastro") {
      const g = (grupoEl.value || "").trim();
      const n = (nomeEl.value || "").trim();

      let ok = true;
      if (!g) { setInvalid(grupoEl, true); ok = false; }
      if (!n) { setInvalid(nomeEl, true); ok = false; }

      if (!ok) {
        if (modo === "cadastro") showError("Preencha Grupo e Categoria antes de salvar.");
        if (modo === "edicao") {
          const e = document.getElementById("editErro");
          e.innerText = "Preencha Grupo e Categoria antes de salvar.";
          e.style.display = "block";
        }
      }
      return ok;
    }

    async function exigirAdmin() {
      const ok = await verificarLogin();
      if (!ok) return false;

      const res = await authFetch("/api/auth/check");
      const data = await res.json().catch(() => null);

      if (data?.usuario?.role !== "admin") {
        window.location.href = "/";
        return false;
      }
      return true;
    }

    // ✅ Carrega grupos (ativos) e preenche os SELECTs em ordem alfabética
    async function carregarGruposSelects(valorEdicaoSelecionado = "") {
      const selectCadastro = document.getElementById("grupo");
      const selectEdicao = document.getElementById("editGrupo");

      const preencher = (selectEl, grupos, selecionado = "") => {
        if (!selectEl) return;

        if (!grupos.length) {
          selectEl.innerHTML = `<option value="" selected disabled>Nenhum grupo cadastrado</option>`;
          return;
        }

        selectEl.innerHTML = `<option value="" disabled ${!selecionado ? "selected" : ""}>Selecione o grupo</option>`;

        grupos.forEach((g) => {
          const opt = document.createElement("option");
          opt.value = g.nome;
          opt.textContent = g.nome;
          if (selecionado && selecionado === g.nome) opt.selected = true;
          selectEl.appendChild(opt);
        });
      };

      try {
        const res = await authFetch(API_GRUPOS);
        if (!res.ok) {
          if (selectCadastro) selectCadastro.innerHTML = `<option value="" selected disabled>Erro ao carregar grupos</option>`;
          if (selectEdicao) selectEdicao.innerHTML = `<option value="" selected disabled>Erro ao carregar grupos</option>`;
          return;
        }

        const grupos = await res.json().catch(() => []);
        const lista = (grupos || [])
          .filter(g => g.ativo === true)
          .map(g => ({ nome: (g.nome || "").trim() }))
          .filter(g => g.nome.length)
          .sort((a, b) => a.nome.localeCompare(b.nome, "pt-BR"));

        // cadastro: sem seleção
        preencher(selectCadastro, lista);

        // edição: mantém selecionado
        const selecionadoEdicao = (valorEdicaoSelecionado || selectEdicao?.value || "").trim();
        preencher(selectEdicao, lista, selecionadoEdicao);

      } catch (e) {
        if (selectCadastro) selectCadastro.innerHTML = `<option value="" selected disabled>Erro ao carregar grupos</option>`;
        if (selectEdicao) selectEdicao.innerHTML = `<option value="" selected disabled>Erro ao carregar grupos</option>`;
      }
    }

    async function abrirModalEditar(cat) {
      document.getElementById("editId").value = cat.id;
      document.getElementById("editNome").value = cat.nome || "";
      document.getElementById("editAtiva").checked = cat.ativa === true;

      // ✅ garante que os grupos foram carregados e seleciona o grupo do item
      await carregarGruposSelects(cat.grupo || "");

      setInvalid(document.getElementById("editGrupo"), false);
      setInvalid(document.getElementById("editNome"), false);

      const e = document.getElementById("editErro");
      e.style.display = "none";
      e.innerText = "";

      if (!modalEditar) modalEditar = new bootstrap.Modal(document.getElementById("modalEditarCategoria"));
      modalEditar.show();
    }

    /* ✅ FILTRO (client-side) */
    function normalizarTexto(s) {
      return (s || "")
        .toString()
        .normalize("NFD")
        .replace(/[\u0300-\u036f]/g, "")
        .toLowerCase()
        .trim();
    }

    function aplicarFiltroCategorias() {
      const input = document.getElementById("filtroCategorias");
      const termo = normalizarTexto(input?.value || "");
      const tbody = document.getElementById("tbodyCategorias");
      const contador = document.getElementById("contadorCategorias");
      if (!tbody) return;

      const linhas = Array.from(tbody.querySelectorAll("tr[data-search]"));
      if (!linhas.length) {
        if (contador) contador.innerText = "0";
        return;
      }

      let visiveis = 0;
      linhas.forEach(tr => {
        const hay = tr.getAttribute("data-search") || "";
        const match = !termo || hay.includes(termo);
        tr.classList.toggle("d-none", !match);
        if (match) visiveis++;
      });

      if (contador) contador.innerText = String(visiveis);

      const avisoId = "linhaSemResultadosCategorias";
      let aviso = document.getElementById(avisoId);
      if (!visiveis) {
        if (!aviso) {
          aviso = document.createElement("tr");
          aviso.id = avisoId;
          aviso.innerHTML = `<td colspan="4" class="text-muted">Nenhuma categoria encontrada para o filtro atual.</td>`;
          tbody.appendChild(aviso);
        } else {
          aviso.classList.remove("d-none");
        }
      } else {
        if (aviso) aviso.classList.add("d-none");
      }
    }

    function prepararFiltroCategorias() {
      const input = document.getElementById("filtroCategorias");
      const btnLimpar = document.getElementById("btnLimparFiltroCategorias");
      if (!input || !btnLimpar) return;

      input.addEventListener("input", aplicarFiltroCategorias);
      btnLimpar.addEventListener("click", () => {
        input.value = "";
        input.focus();
        aplicarFiltroCategorias();
      });
    }

    async function carregarCategorias() {
      const tbody = document.getElementById("tbodyCategorias");

      const res = await authFetch(API);
      if (!res.ok) {
        tbody.innerHTML = `<tr><td colspan="4" class="text-danger">Erro ao carregar categorias</td></tr>`;
        const contador = document.getElementById("contadorCategorias");
        if (contador) contador.innerText = "0";
        return;
      }

      const categorias = await res.json().catch(() => []);

      categorias.sort((a, b) => {
        const g = (a.grupo || "").localeCompare((b.grupo || ""), "pt-BR");
        if (g !== 0) return g;
        return (a.nome || "").localeCompare((b.nome || ""), "pt-BR");
      });

      if (!categorias.length) {
        tbody.innerHTML = `<tr><td colspan="4" class="text-muted">Nenhuma categoria cadastrada.</td></tr>`;
        const contador = document.getElementById("contadorCategorias");
        if (contador) contador.innerText = "0";
        return;
      }

      tbody.innerHTML = "";
      categorias.forEach(c => {
        const ativa = c.ativa === true;
        const statusTxt = ativa ? "Ativa" : "Inativa";

        const payload = JSON.stringify({
          id: c.id, grupo: c.grupo, nome: c.nome, ativa: ativa
        }).replace(/'/g, "&apos;");

        const search = normalizarTexto(`${c.id} ${c.grupo} ${c.nome} ${statusTxt}`);

        tbody.innerHTML += `
          <tr data-search="${search}">
            <td>${c.grupo}</td>
            <td>${c.nome}</td>
            <td>
              <span class="badge ${ativa ? "bg-success" : "bg-secondary"}">
                ${statusTxt}
              </span>
            </td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-2"
                onclick='abrirModalEditar(${payload})'>
                <i class="bi bi-pencil"></i> Editar
              </button>

              <button class="btn btn-sm btn-outline-warning me-2"
                onclick="toggleAtiva('${c.id}', ${ativa ? "false" : "true"})">
                <i class="bi bi-toggle-${ativa ? "on" : "off"}"></i>
                ${ativa ? "Inativar" : "Ativar"}
              </button>

              <button class="btn btn-sm btn-outline-danger"
                onclick="deletarCategoria('${c.id}')">
                <i class="bi bi-trash"></i> Deletar
              </button>
            </td>
          </tr>
        `;
      });

      // ✅ aplica filtro atual (se já estiver digitado)
      aplicarFiltroCategorias();
    }

    async function deletarCategoria(id) {
      if (!confirm("Deseja realmente deletar esta categoria?")) return;

      const res = await authFetch(`${API}/${id}`, { method: "DELETE" });
      const data = await res.json().catch(() => null);

      if (!res.ok) {
        showError(data?.error || "Erro ao deletar categoria");
        return;
      }

      showSuccess("Categoria removida com sucesso");
      carregarCategorias();
    }

    async function toggleAtiva(id, ativa) {
      const res = await authFetch(`${API}/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ ativa })
      });

      const data = await res.json().catch(() => null);
      if (!res.ok) {
        showError(data?.error || "Erro ao atualizar status");
        return;
      }

      carregarCategorias();
    }

    // cadastro
    const grupoEl = document.getElementById("grupo");
    const nomeEl = document.getElementById("nome");
    limparInvalidAoDigitar(grupoEl);
    limparInvalidAoDigitar(nomeEl);

    document.getElementById("formCategoria").addEventListener("submit", async (e) => {
      e.preventDefault();

      if (!validarNaoVazio(grupoEl, nomeEl, "cadastro")) return;

      const grupo = grupoEl.value.trim();
      const nome = nomeEl.value.trim();

      const res = await authFetch(API, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ grupo, nome })
      });

      const data = await res.json().catch(() => null);
      if (!res.ok) {
        showError(data?.error || "Erro ao salvar categoria");
        return;
      }

      showSuccess("Categoria cadastrada com sucesso");
      document.getElementById("formCategoria").reset();
      setInvalid(grupoEl, false);
      setInvalid(nomeEl, false);
      await carregarCategorias();
      await carregarGruposSelects(); // ✅ atualiza o select
    });

    // edição
    const editGrupoEl = document.getElementById("editGrupo");
    const editNomeEl = document.getElementById("editNome");
    limparInvalidAoDigitar(editGrupoEl);
    limparInvalidAoDigitar(editNomeEl);

    document.getElementById("formEditarCategoria").addEventListener("submit", async (e) => {
      e.preventDefault();

      const id = document.getElementById("editId").value;
      const ativa = document.getElementById("editAtiva").checked;

      const err = document.getElementById("editErro");
      err.style.display = "none";
      err.innerText = "";

      if (!validarNaoVazio(editGrupoEl, editNomeEl, "edicao")) return;

      const grupo = editGrupoEl.value.trim();
      const nome = editNomeEl.value.trim();

      const res = await authFetch(`${API}/${id}`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ grupo, nome, ativa })
      });

      const data = await res.json().catch(() => null);
      if (!res.ok) {
        err.innerText = data?.error || "Erro ao atualizar categoria";
        err.style.display = "block";
        return;
      }

      modalEditar?.hide();
      showSuccess("Categoria atualizada com sucesso");
      await carregarCategorias();
      await carregarGruposSelects();
    });

    document.getElementById("btnRecarregar").addEventListener("click", async () => {
      await carregarCategorias();
      await carregarGruposSelects();
    });

    document.getElementById("logoutBtn").onclick = logout;

    async function iniciar() {
      marcarMenuAtivo();

      const ok = await exigirAdmin();
      if (!ok) return;

      await carregarUsuarioLogado();

      prepararFiltroCategorias(); // ✅ habilita filtro

      await carregarGruposSelects(); // ✅ carrega lista no select
      await carregarCategorias();
    }

    iniciar();
  </script>

</body>
</html>