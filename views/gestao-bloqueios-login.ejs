<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Service Desk - Bloqueios de Login</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body { background-color: #f8f9fa; }
    .sidebar { height: 100vh; background-color: #212529; }
    .sidebar a {
      color: #adb5bd;
      text-decoration: none;
      display: block;
      padding: 10px;
    }
    .sidebar a:hover { background-color: #343a40; color: #fff; }
  </style>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="bi bi-headset"></i> Service Desk</a>
    <div class="d-flex">
      <span id="userName" class="navbar-text text-white me-3">Bem-vindo</span>
      <button id="logoutBtn" class="btn btn-outline-light btn-sm">Sair</button>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">

    <%- include("partials/sidebar") %>

    <div class="col-md-10 p-4">

      <div class="d-flex align-items-center justify-content-between mb-3">
        <h4 class="mb-0"><i class="bi bi-unlock"></i> Bloqueios de Login</h4>
        <button id="btnRecarregar" class="btn btn-primary btn-sm">
          <i class="bi bi-arrow-clockwise"></i> Recarregar
        </button>
      </div>

      <div id="alerta" class="alert d-none" role="alert"></div>

      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          Usuários bloqueados (lockout)
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>Usuário</th>
                  <th>Tentativas</th>
                  <th>Bloqueado até</th>
                  <th>Minutos restantes</th>
                  <th class="text-end">Ações</th>
                </tr>
              </thead>
              <tbody id="tabelaBloqueados"></tbody>
            </table>
          </div>

          <div id="vazio" class="text-muted d-none">
            Nenhum usuário bloqueado no momento.
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="/js/auth.js"></script>

<script>
function showAlert(type, msg) {
  const el = document.getElementById("alerta");
  el.className = "alert alert-" + type;
  el.textContent = msg;
  el.classList.remove("d-none");
  setTimeout(() => el.classList.add("d-none"), 3500);
}

async function carregarBloqueados() {
  const tbody = document.getElementById("tabelaBloqueados");
  const vazio = document.getElementById("vazio");
  tbody.innerHTML = "";
  vazio.classList.add("d-none");

  const res = await authFetch("/api/auth/locked");
  if (res.status === 403) {
    showAlert("danger", "Acesso negado. Apenas ADMIN pode ver esta página.");
    return;
  }
  if (!res.ok) {
    showAlert("danger", "Erro ao carregar bloqueados.");
    return;
  }

  const dados = await res.json();

  if (!dados || dados.length === 0) {
    vazio.classList.remove("d-none");
    return;
  }

  dados.forEach(item => {
    const dt = item.blockedUntil ? new Date(item.blockedUntil) : null;
    const dtFmt = dt ? dt.toLocaleString("pt-BR") : "-";

    tbody.innerHTML += `
      <tr>
        <td><strong>${item.usuario}</strong></td>
        <td>${item.failCount ?? 0}</td>
        <td>${dtFmt}</td>
        <td>${item.minutosRestantes ?? "-"}</td>
        <td class="text-end">
          <button class="btn btn-outline-success btn-sm" onclick="desbloquear('${item.usuario}')">
            <i class="bi bi-unlock"></i> Desbloquear
          </button>
        </td>
      </tr>
    `;
  });
}

async function desbloquear(usuario) {
  const ok = confirm(`Desbloquear o usuário '${usuario}' agora?`);
  if (!ok) return;

  const res = await authFetch("/api/auth/unlock", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ usuario })
  });

  const data = await res.json().catch(()=>null);

  if (!res.ok) {
    showAlert("danger", data?.message || "Erro ao desbloquear.");
    return;
  }

  showAlert("success", data?.message || "Desbloqueado com sucesso.");
  await carregarBloqueados();
}

logoutBtn.onclick = logout;
btnRecarregar.onclick = carregarBloqueados;

(async function init(){
  const ok = await verificarLogin();
  if(!ok) return;

  await carregarUsuarioLogado();
  await carregarBloqueados();
})();
</script>

</body>
</html>